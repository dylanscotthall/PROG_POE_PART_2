@{
    ViewData["Title"] = "Farmer page";
}

<div class="text-center">
    <h1 class="display-4">Products</h1>
    <p>
        <a asp-action="CreateProduct" asp-route-FarmerId="@ViewBag.user.FarmerId" style="border-radius: 10px; padding: 5px; text-decoration:none; background-color:#0d6efd; color:white">Create New Product</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Product Price
                </th>
                <th>
                    Product Stock
                </th>
                <th>
                    Date Added
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.products)
            {
                <tr>
                    <td>
                        @(item.ProductName)
                    </td>
                    <td>
                        @(item.ProductPrice)
                    </td>
                    <td>
                        @(item.ProductStock)
                    </td>
                    <td>
                        @(item.DateAdded)
                    </td>
                    <td>
                        <a asp-action="EditProduct" asp-route-ProductId="@item.ProductId" asp-route-FarmerId="@ViewBag.user.FarmerId">Edit</a> |
                        <a asp-action="ViewProduct" asp-route-ProductId="@item.ProductId" asp-route-FarmerId="@ViewBag.user.FarmerId">Details</a> |
                        <a asp-action="DeleteProduct" asp-route-ProductId="@item.ProductId" asp-route-FarmerId="@ViewBag.user.FarmerId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

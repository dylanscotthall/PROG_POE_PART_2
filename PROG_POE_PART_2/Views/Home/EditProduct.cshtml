@model PROG_POE_PART_2.Model.Product
@{
    ViewData["Title"] = "Edit Product";

}

<h1>Edit Product</h1>
@{
    if (ViewBag.error == true)
    {
        <p style="color:red;">Ensure all fields are filled in</p>
    }
}
<form asp-controller="Home" asp-action="EditProduct" asp-route-farmerId="@ViewBag.farmerId" asp-route-productId="@ViewBag.Product.ProductId" method="post">
    <div class="mb-3">
        <label for="" class="form-label">Product Name</label>
        <input type="text" class="form-control" asp-for="ProductName" value="@ViewBag.Product.ProductName"/>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Product Price</label>
        <input type="text" class="form-control" asp-for="ProductPrice" value="@ViewBag.Product.ProductPrice" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Product Stock</label>
        <input type="number" class="form-control" asp-for="ProductStock" value="@ViewBag.Product.ProductStock" />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Product Type</label>
        <input type="text" class="form-control" asp-for="ProductType" value="@ViewBag.Product.ProductType" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>


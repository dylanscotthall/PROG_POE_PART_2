@{
    ViewData["Title"] = "Farmer page";
}

<div class="text-center">
    <h1 class="display-4">Farmers</h1>
    <p>
        <a asp-action="CreateFarmer" asp-route-employeeId="@ViewBag.user.EmployeeId" style="border-radius: 10px; padding: 5px; text-decoration:none; background-color:#0d6efd; color:white">Create New Farmer</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Farmer Name
                </th>
                <th>
                    Farmer Surname
                </th>
                <th>
                    Farm Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.farmers)
            {
                <tr>
                    <td>
                        @(item.FarmerName)
                    </td>
                    <td>
                        @(item.FarmerSurname)
                    </td>
                    <td>
                        @(item.FarmName)
                    </td>
                    <td>
                        <a asp-action="EditFarmer" asp-route-FarmerId="@item.FarmerId" asp-route-employeeId="@ViewBag.user.EmployeeId">Edit</a> |
                        <a asp-action="ViewFarmer" asp-route-FarmerId="@item.FarmerId" asp-route-employeeId="@ViewBag.user.EmployeeId">Details</a> |
                        <a asp-action="DeleteFarmer" asp-route-FarmerId="@item.FarmerId" asp-route-employeeId="@ViewBag.user.EmployeeId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
